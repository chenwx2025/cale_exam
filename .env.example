# Database
# PostgreSQL (生产环境 - AWS/Vercel)
DATABASE_URL="postgresql://user:password@host:5432/cale_exam?schema=public"
# 或者使用 Vercel Postgres 格式:
# DATABASE_URL="postgres://user:password@host:5432/verceldb?sslmode=require"

# JWT Secrets (生成随机字符串)
JWT_SECRET="your-jwt-secret-here-min-32-characters"
JWT_REFRESH_SECRET="your-refresh-secret-here-min-32-characters"

# OpenAI API (用于 AI 功能)
OPENAI_API_KEY="sk-your-openai-api-key-here"

# Email Service (可选，用于邮件通知)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="your-email@gmail.com"

# Web Push (可选，用于浏览器推送通知)
# 生成方法: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=""
VAPID_PRIVATE_KEY=""
VAPID_SUBJECT="mailto:your-email@domain.com"

# Application
NODE_ENV="production"
PORT="3000"
NUXT_PUBLIC_API_BASE="https://passwel.com"
